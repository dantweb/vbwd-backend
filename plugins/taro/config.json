{
  "llm_model": {
    "type": "string",
    "default": "gpt-4",
    "description": "LLM model for card interpretations"
  },
  "llm_temperature": {
    "type": "number",
    "default": 0.8,
    "description": "LLM temperature (0.0-1.0) for creativity level"
  },
  "llm_max_tokens": {
    "type": "number",
    "default": 200,
    "description": "Maximum tokens per interpretation"
  },
  "session_duration_minutes": {
    "type": "number",
    "default": 30,
    "description": "Session duration in minutes"
  },
  "session_expiry_warning_minutes": {
    "type": "number",
    "default": 3,
    "description": "Show warning when N minutes remaining"
  },
  "base_session_tokens": {
    "type": "number",
    "default": 10,
    "description": "Token cost for creating a session"
  },
  "follow_up_base_tokens": {
    "type": "number",
    "default": 5,
    "description": "Base token cost for follow-up questions"
  }
}
